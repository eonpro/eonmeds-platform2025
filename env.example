# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eonmeds
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.eonmeds.com
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_ISSUER=https://your-tenant.auth0.com/

# Security
# JWT_SECRET not needed with Auth0 (uses RS256)
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_xxx                          # Your Stripe secret key (test or live)
STRIPE_WEBHOOK_SECRET=whsec_xxx                        # Endpoint secret from Stripe webhook settings
STRIPE_PRICE_ID_DEFAULT=price_xxx                      # Default subscription price ID
TAX_ENABLED=false                                      # Enable Stripe Tax (requires customer address)

# Stripe Product IDs (optional - if using specific products)
STRIPE_PRODUCT_WEIGHT_LOSS_MONTHLY=prod_xxx           # Weight loss monthly product ID
STRIPE_PRODUCT_WEIGHT_LOSS_QUARTERLY=prod_xxx         # Weight loss quarterly product ID
STRIPE_PRODUCT_TESTOSTERONE_MONTHLY=prod_xxx          # Testosterone monthly product ID
STRIPE_PRODUCT_TESTOSTERONE_QUARTERLY=prod_xxx        # Testosterone quarterly product ID

# Stripe Price IDs (optional - if using specific prices)
STRIPE_PRICE_WEIGHT_LOSS_MONTHLY=price_xxx           # Weight loss monthly price ID
STRIPE_PRICE_WEIGHT_LOSS_QUARTERLY=price_xxx         # Weight loss quarterly price ID
STRIPE_PRICE_TESTOSTERONE_MONTHLY=price_xxx          # Testosterone monthly price ID
STRIPE_PRICE_TESTOSTERONE_QUARTERLY=price_xxx        # Testosterone quarterly price ID

# Application URLs
APP_BASE_URL=https://your-frontend-domain.com         # Frontend URL for redirects/callbacks

# HeyFlow Webhook Configuration
HEYFLOW_WEBHOOK_SECRET=your_heyflow_secret_or_SKIP   # HeyFlow webhook secret or SKIP for testing

# OpenAI Configuration (for SOAP notes)
OPENAI_API_KEY=sk-proj-xxx                            # OpenAI API key for AI features 