{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build && echo 'TRACKING ROUTES INCLUDED'",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs-20_x", "npm-9_x"]
        },
        "build": {
          "cmds": ["npm install", "npm run build", "echo 'Build completed with tracking routes'"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "region": "us-west1"
  }
}
